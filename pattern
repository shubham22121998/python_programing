def pattern(n):
  for i in range(n):
    for j in range(n-1):
      print(end=" ")
    for j in range(0,i+1):
      if i==j:
        print("*",end=" ")
      else:
        print(".",end=" ")  
    print("\r")    

n=6
pattern(n)

      * 
     . * 
     . . * 
     . . . * 
     . . . . * 
     . . . . . * 
